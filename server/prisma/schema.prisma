generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
   url     = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Sweet {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  category  String
  price     Float
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}